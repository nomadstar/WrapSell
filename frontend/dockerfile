# Usa una imagen oficial de Node.js
FROM node:20-alpine AS builder

WORKDIR /app

# Copia package.json y package-lock.json
COPY package.json package-lock.json ./
# Si usas pnpm o yarn, copia el archivo correspondiente

# Instala dependencias
RUN npm install

# Copia el resto del c贸digo fuente
COPY . .

# Copia el archivo .env si lo necesitas en build
COPY .env .env

# Construye la app Next.js
RUN npm run build

# --- Etapa de producci贸n ---
FROM node:20-alpine AS runner

WORKDIR /app

# Copia solo lo necesario desde el builder
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/.env ./.env

# Exp贸n el puerto
EXPOSE 3000

# Comando para iniciar Next.js en modo producci贸n
CMD ["npm", "run", "dev"]